							<east>(0.3,-0.5)</east>
							<west>(-0.3,-0.5)</west>
						</renderProperties>
						<gizmoLabel>support MG</gizmoLabel>
						<aimPieOffset>(0, 0)</aimPieOffset>
						<key>topMG</key>
