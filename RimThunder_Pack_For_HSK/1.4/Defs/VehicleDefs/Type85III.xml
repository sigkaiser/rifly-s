<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<Vehicles.VehicleBuildDef ParentName="RT_BaseVehicleBuild">
		<!-- 建築型態的載具，基本上與BuildingDef相同-->
		<defName>RT_Type85III_Vehicle_Blueprint</defName>
		<label>Type 85-III</label>
		<description>A 2nd generation MBT designed for foreign trade, equipped with an 125mm cannon with auto-loader and 12.7mm machine gun, also with smoke launchers, applied composite armor and ERA for improved defensibility.</description>
		<graphicData>
			<texPath>Type85III/vehicle</texPath>
			<drawSize>(3.6,5.6)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>20000</WorkToBuild>
			<Flammability>0.05</Flammability>
		</statBases>
		<size>(3,5)</size>
		<researchPrerequisites>
			<li>MicroelectronicsBasics</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
		<costList>
			<EngineHeavy>1</EngineHeavy>
			<ComponentFuelTank>3</ComponentFuelTank>
			<ComponentTransmission>1</ComponentTransmission>
			<ComponentWheelRoad>16</ComponentWheelRoad>
			<ComponentIndustrial>60</ComponentIndustrial>
			<ComponentAdvanced>30</ComponentAdvanced>
			<ReinforcedGlass>25</ReinforcedGlass>
			<Plasteel>350</Plasteel>
			<Titanium>260</Titanium>
			<Plastic>120</Plastic>
			<AluminiumBar>40</AluminiumBar>
			<Mechanism>60</Mechanism>
			<AdvMechanism>50</AdvMechanism>
			<ElectronicComponents>30</ElectronicComponents>
			<Electronics>15</Electronics>
		</costList>
		<thingToSpawn>RT_Type85III_Vehicle</thingToSpawn>
		<!-- 建造後生成的載具Kind,這是與建築唯一不一樣的-->
	</Vehicles.VehicleBuildDef>

	<!-- 載具本體 -->
	<Vehicles.VehicleDef ParentName="RT_BaseVehicle">
		<defName>RT_Type85III_Vehicle</defName>
		<label>Type 85-III</label>
		<description>A 2nd generation main battle tank designed for foreign trade, equipped with an 125mm cannon with auto-loader and 12.7mm machine gun, also applied composite armor and ERA for improved defensibility.</description>
		<buildDef>RT_Type85III_Vehicle_Blueprint</buildDef>
		<graphicData>
			<texPath>Type85III/vehicle</texPath>
			<drawSize>(3.6,5.6)</drawSize>
		</graphicData>
		<size>(3,5)</size>
		<fillPercent>1</fillPercent>
		<vehicleCategory>Combat</vehicleCategory>
		<statBases>
			<ArmorRating_Blunt>0.8</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.6</ArmorRating_Sharp>
			<Flammability>0</Flammability>
			<MarketValue>5400</MarketValue>
		</statBases>
		<vehicleStats>
			<Mass>2000</Mass>
			<MoveSpeed>9</MoveSpeed>
			<CargoCapacity>600</CargoCapacity>
			<RepairRate>0.4</RepairRate>
		</vehicleStats>
		<soundOneShotsOnEvent Inherit = "False">
			<li>
				<key>PawnEntered</key>
				<value>VVE_VehicleEnter</value>
			</li>
			<li>
				<key>PawnExited</key>
				<value>VVE_VehicleEnter</value>
			</li>
			<li>
				<key>IgnitionOn</key>
				<value>RT_T72VehicleStart</value>
			</li>
			<li>
				<key>IgnitionOff</key>
				<value>RT_T72VehicleStop</value>
			</li>
		</soundOneShotsOnEvent>
		<soundSustainersOnEvent Inherit="false"> 
			<li>
				<key>(IgnitionOn, IgnitionOff)</key>
				<value>RT_T72VehicleEngine</value>
			</li>
		</soundSustainersOnEvent>
		<race>
			<baseBodySize>4</baseBodySize>
		</race>
		<properties>
			<!-- 座位與功能 -->
			<customRoadCosts AssignDefaults = "0.4"/>
			<worldSpeedMultiplier>1.0</worldSpeedMultiplier>
			<winterSpeedMultiplier>1.0</winterSpeedMultiplier>
			<customHillinessCosts>
				<SmallHills>0.3</SmallHills>
				<LargeHills>1.0</LargeHills>
				<Mountainous>2</Mountainous>
			</customHillinessCosts>
			<vehicleJobLimitations>
				<li>(RepairVehicle, 5)</li>
			</vehicleJobLimitations>
			<roles>
				<li>
					<key>driver</key>
					<label>driver</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					<hitbox>
						<cells>
							<li>(-1, 2)</li>
						</cells>
					</hitbox>
					<handlingTypes>
						<li>Movement</li>
					</handlingTypes>
				</li>
				<li>
					<key>gunner</key>
					<label>gunner</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					<hitbox>
						<cells>
							<li>(-1, 0)</li>
						</cells>
					</hitbox>
					<handlingTypes>Turret</handlingTypes>
					<turretIds>
						<li>mainTurret</li>
						<li>coaxialMG</li>
						<li>leftSmoke</li>
						<li>rightSmoke</li>
					</turretIds>
				</li>
				<li>
					<key>Commander</key>
					<label>Commander</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					<hitbox>
						<cells>
							<li>(1, 0)</li>
						</cells>
					</hitbox>
					<handlingTypes>Turret</handlingTypes>
					<turretIds>
						<li>topMG</li>
					</turretIds>
				</li>
			</roles>
		</properties>
		<components>
			<!-- 各種零件 -->
			<!-- Internal mobile Part 內部驅動部件-->
			<li>
				<!--Engine 100-->
				<key>Engine</key>
				<label>Engine</label>
				<health>100</health>
				<priorityStatEfficiency>true</priorityStatEfficiency>
				<categories>
					<li>MoveSpeed</li>
				</categories>
				<depth>Internal</depth>
				<reactors>
					<li Class = "Vehicles.Reactor_Explosive">
						<indicator>VF_Explosive</indicator>
						<chance>0.25</chance>
						<maxHealth>0.3</maxHealth>
						<radius>3</radius>
						<damageDef>Bomb</damageDef>
					</li>
				</reactors>
				<hitbox>
					<cells>
						<li>(0, -1)</li>
						<li>(0, -2)</li>
					</cells>
				</hitbox>
			</li>
			<li>
				<!-- fuel tank 100-->
				<key>FuelTank</key>
				<label>fuel tank</label>
				<health>100</health>
				<depth>Internal</depth>
				<reactors>
					<li Class = "Vehicles.Reactor_FuelLeak"/>
				</reactors>
				<hitbox>
					<cells>
						<li>(1, 1)</li>
						<li>(1, 2)</li>
					</cells>
				</hitbox>
			</li>
			<li>
				<!-- Gearbox 50-->
				<key>Gearbox</key>
				<label>gearbox</label>
				<health>50</health>
				<depth>Internal</depth>
				<categories>
					<li>MoveSpeed</li>
				</categories>
				<hitbox>
					<cells>
						<li>(0, -2)</li>
					</cells>
				</hitbox>
			</li>
			<li>
				<!-- AmmoRack 50-->
				<key>AmmoRack</key>
				<label>ammo rack</label>
				<health>50</health>
				<depth>Internal</depth>
				<hitWeight>0.2</hitWeight>
				<reactors>
					<li Class = "Vehicles.Reactor_Explosive">
						<indicator>VF_Explosive</indicator>
						<chance>0.5</chance>
						<maxHealth>0.5</maxHealth>
						<radius>5</radius>
						<damageDef>Bomb</damageDef>
					</li>
				</reactors>
				<hitbox>
					<cells>
						<li>(0, 0)</li>
						<li>(0, -1)</li>
					</cells>
				</hitbox>
			</li>
			<li>
				<!-- transmission shaft 40 -->
				<key>TransmissionShaft</key>
				<label>transmission shaft</label>
				<health>40</health>
				<depth>Internal</depth>
			</li>
			<!-- External mobile Part 外部驅動部件-->
			<li>
				<!-- LeftTrack 150-->
				<key>LeftTrack</key>
				<label>left track</label>
				<health>150</health>
				<depth>External</depth>
				<categories>
					<li>MoveSpeed</li>
				</categories>
				<tags>
					<li>Wheel</li>
				</tags>
				<hitWeight>2</hitWeight>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Left</side>
				</hitbox>
			</li>
			<li>
				<!-- RightTrack 150-->
				<key>RightTrack</key>
				<label>right track</label>
				<health>150</health>
				<depth>External</depth>
				<categories>
					<li>MoveSpeed</li>
				</categories>
				<tags>
					<li>Wheel</li>
				</tags>
				<hitWeight>2</hitWeight>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Right</side>
				</hitbox>
			</li>
			<li>
				<!-- LeftRoadWheels 100-->
				<key>LeftRoadWheels</key>
				<label>left road wheels</label>
				<health>100</health>
				<depth>External</depth>
				<categories>
					<li>MoveSpeed</li>
				</categories>
				<tags>
					<li>Wheel</li>
				</tags>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Left</side>
				</hitbox>
			</li>
			<li>
				<!-- RightRoadWheels 100-->
				<key>RightRoadWheels</key>
				<label>right road wheels</label>
				<health>100</health>
				<depth>External</depth>
				<categories>
					<li>MoveSpeed</li>
				</categories>
				<tags>
					<li>Wheel</li>
				</tags>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Right</side>
				</hitbox>
			</li>
			<li>
				<!-- LeftDriveSprocket 75-->
				<key>LeftDriveSprocket</key>
				<label>left drive sprocket</label>
				<health>75</health>
				<depth>External</depth>
				<categories>
					<li>MoveSpeed</li>
				</categories>
				<tags>
					<li>Wheel</li>
				</tags>
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells>
						<li>(-1, -2)</li>
