	<!-- 主砲的Def -->
	<Vehicles.VehicleTurretDef ParentName="RT_BaseTurret">
		<defName>RT_Type85III_Tank_Turret</defName>
		<label>main turret</label>
		<!-- 炮塔图标 -->
		<gizmoIconTexPath>Type85III/vehicle_turret_gizmo</gizmoIconTexPath>
		<!-- 炮塔部分 -->
		<graphicData>
			<texPath>Type85III/vehicle_turret</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType> 
			<drawSize>(9.6,9.6)</drawSize>
			<layer>0</layer>
		</graphicData>
		<!-- 炮管后座部分 -->
		<graphics>
			<li>
				<graphicData>
					<texPath>Type85III/vehicle_barrel</texPath>
					<drawSize>(9.6,9.6)</drawSize>
					<graphicClass>Vehicles.Graphic_Turret</graphicClass>
					<shaderType>CutoutComplexPattern</shaderType>
				</graphicData>
				<recoil>
					<distanceTotal>0.35</distanceTotal>
					<distancePerTick>0.05</distancePerTick>
					<speedMultiplierPostRecoil>0.1</speedMultiplierPostRecoil>
				</recoil>
			</li>	
		</graphics>
		<!-- 彈藥與裝填容量相關 -->
		<reloadTimer>6</reloadTimer>
		<magazineCapacity>1</magazineCapacity>
		<chargePerAmmoCount>10</chargePerAmmoCount>
		<genericAmmo>true</genericAmmo>
		<ammunition>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</ammunition>
		<!-- 射程與射界相關 -->
